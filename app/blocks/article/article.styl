.article
    padding-top w(130)

    &__wrap__title
        display flex
        flex-direction row
        justify-content space-between

    &__wrap__content
        padding-top 40px
        display flex
        flex-direction row

    &__content__items
        padding-right 20px
        &:last-child
            padding-right 0

    &__title
        font-family $ff-Prata
        font-style normal
        font-weight 400
        font-size 40px
        line-height 40px
        color $c-black

    &__links
        font-family $ff-Inter
        font-style normal
        font-weight 400
        font-size 14px
        line-height 14px
        color $c-black
        text-transform uppercase

    &__item-img
        width 310px
        img
            width 100%

    &__item-date
        padding-top 20px
        font-family $ff-Inter
        font-style normal
        font-weight 400
        font-size 14px
        line-height 14px
        color $c-grey

    &__item-text
        padding-top 12px
        font-family $ff-Interh
        font-style normal
        font-weight 400
        font-size 16px
        line-height 16px
        color $c-black