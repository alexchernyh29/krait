.banner
    padding-top 28px
    

    &__wrap
        position relative
        width 100%
        height 560px
        overflow hidden
        background-image url("/images/banner-background.jpg")

    &__wrapper-content
        display flex
        align-items center
        justify-content center

    &__swiper-img 
        padding 0 0 0 100px

    &__swiper-text
        padding 0 0 0 90px

    &__text-discount
        font-family 'Prata'
        font-weight 400
        font-size 20px
        line-height 100%
        color $c-black

    &__text-name
        padding-top 30px
        font-family 'Prata'
        font-weight 400
        font-size 50px
        line-height 100%

    &__text-button
        display block
        margin-top 57px
        padding 20px 50px 20px 50px
        width 200px
        text-transform uppercase
        color $c-white
        text-decoration none
        background-color $c-black

    &__button__next,
    &__button__prev
        top 253px
        border 1px solid $c-black
        background $c-grey
        z-index 11
        border-radius 50%

    .swiper-pagination-bullet-active
        background-color $c-black
        width 8px
        height 8px

    .swiper-button-next, .swiper-button-prev
            top 265px
            width 54px
            height 54px
            color $c-black
            &:after
                display none

    .swiper-button-next
        right 24px

    .swiper-button-prev
        left 24px

    .swiper-horizontal>.swiper-pagination-bullets, .swiper-pagination-bullets.swiper-pagination-horizontal, .swiper-pagination-custom, .swiper-pagination-fraction 
        bottom 32px
        left 2px
        width 100%



    